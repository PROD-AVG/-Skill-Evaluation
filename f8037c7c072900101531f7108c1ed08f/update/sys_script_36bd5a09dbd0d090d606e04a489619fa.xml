        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
	var track_change_fields = ['certification_number', 'certified_date', 'servicenow_release'];
	
	// Modified record with Approved status
	if(previous.status == 3) {
		// Store the last approved information
		var last_approved_information = {};
		for (var field in track_change_fields) {
			last_approved_information[field] = previous.getValue(field);
		}
		
		current.last_approved_information = JSON.stringify(last_approved_information);
		// Update status to modified
		current.status = 2;
	} 	
	// Modified record with Modified status
	else{
		// Check if the modified matched last approved information
		var isMatched = true;
		var last_approved_information = JSON.parse(current.last_approved_information);
		for (var field in track_change_fields) {
			if (last_approved_information[field] != current.getValue(field)) {
				isMatched = false;
				break;
			}
		}
		
		if(isMatched) {
			// Update status back to approved
			current.status = 3;
		} else {
			// Do nothing
		}
	}

})(current, previous);]]></script>
